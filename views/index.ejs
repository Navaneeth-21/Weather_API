<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <style>

    body {
      padding-top: 30px;
    }

    .weather-card {
      margin-bottom: 20px;
    }

  </style>

</head>

<body>

  <div class="container-sm">
    <h1 class="text-center mb-4">Weather Api</h1>
    <form action="/weather" method="post" class="mb-4">
      <div class="input-group">
        <input type="text" class="form-control" id="cityName" name="cityName" placeholder="Enter the  city" required>
      </div>
      <button type="submit" class="btn btn-primary my-2">Get weather</button>
    </form>

    <h2 class="mb-3">Recent Searches :</h2>

    <% weather.forEach(entry=> { %>
      <div class="card weather-card">
        <div class="card-body">
          <h5 class="card-title">
            <%= entry.cityName %>
          </h5>
          <p class="card-text">Temperature: <%= entry.temperature %>Â°C</p>
          <p class="card-text">Condition: <%= entry.condition %>
          </p>
        </div>
      </div>

      <% }); %>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>